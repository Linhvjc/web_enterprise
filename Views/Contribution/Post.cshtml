@model WebEnterprise.ViewModels.Contribution.CreateContribution
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}



<form class="forms-sample"  asp-controller="Contribution" asp-action="Post" method="post" enctype="multipart/form-data">
   <div class="form-frame">
       <div class="item-center mb-3">
            <h2>Select your file: @Model.UserId</h2>
       </div>
        <div class="cover-grid">
            <div class="form-group max-input">
            <label class="pb-1 ps-1 fs-3" asp-for="Title">Title</label>
            <input type="text" class="form-control" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group mt-3 item-center">
          @*  <div class="input-file-container">
                    <input type="file" class="input-file" asp-for="File">
            </div>*@
                <label tabindex="0" asp-for="File" class="input-file-trigger">Select a file</label>
                <span asp-validation-for="File" class="text-danger"></span>
                <input type="file" class="input-file" asp-for="File">
                <p class="file-return"></p>
        </div>
        </div>
   </div>

    <input type="hidden" asp-for="MegazineId" value="@Model.MegazineId" />
    <span asp-validation-for="MegazineId" class="text-danger"></span>
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <span asp-validation-for="UserId" class="text-danger"></span>
    <div class="item-center max-button">
        <button type="submit" class="button-9 me-5 mt-4" style="padding: 10px 20px">Submit</button>
    </div>
</form>

<script>
    var the_return = document.querySelector(".file-return");
    var fileInput  = document.querySelector( ".input-file" );
    
    fileInput.addEventListener("change", function (event) {
        the_return.innerHTML = this.files[0].name;
    });
</script>
