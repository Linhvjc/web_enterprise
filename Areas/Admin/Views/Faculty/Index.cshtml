@model List<WebEnterprise.Models.Entities.Faculty>
@{
    ViewData["Title"] = "Index";
    Layout = "../../Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Faculty List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4" style="margin-top: 20px;">
        <div class=" pb-3">

            <div class=" text-end">
                <a asp-controller="Faculty" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Faculty
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>

<div id="deleteConfirmationModal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" id="hideBtn" onclick="hideModal()" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this faculty?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="hideBtn" onclick="hideModal()" data-dismiss="modal">No</button>
                <button id="deleteConfirmationButton" type="submit" form="deleteForm" class="btn btn-danger">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/faculty.js"></script>
}



