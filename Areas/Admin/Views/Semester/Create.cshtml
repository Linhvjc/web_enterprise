@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebEnterprise.ViewModels.Semester.CreateSemester

@{
    ViewData["Title"] = "Semester Dashboard";
    Layout = "../../Views/Shared/_Layout.cshtml";
}

<div class="card-header bg-secondary bg-gradient ml-0 py-3" style="margin-top: 20px;>
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Create New Semester</h2>
        </div>
    </div>
</div>
<div class="col-7 grid-margin stretch-card" style="margin: 50px auto;">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-center">Semester Information Filling Form</h2>
            <form class="forms-group" asp-area="Admin" asp-controller="Semester" asp-action="Create" method="post">
                <div class="form-group mt-3">
                    <label asp-for="Name">Semester Titile</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input class="form-control" asp-for="EndDate">
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Submit</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Semester" asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


